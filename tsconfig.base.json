        "libs/ui/ui-page-actions-buttons/src/index.ts"
      ],
      "@portifolio/ui/ui-taskbar-action-button": [
        "libs/ui/ui-taskbar-action-button/src/index.ts"
      ],
      "@portifolio/utils/util-adpters": [
        "libs/utils/util-adpters/src/index.ts"
      ],
      "@portifolio/utils/util-animations": [
        "libs/utils/util-animations/src/index.ts"
      ],
      "@portifolio/utils/util-styles": ["libs/utils/util-styles/src/index.ts"],
